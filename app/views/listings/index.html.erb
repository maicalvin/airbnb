<p id="notice"><%= notice %></p>

<h1>Accomodations</h1>
<%= paginate @listings %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @listings.each do |listing| %>
<%= link_to(image_tag(listing.image.thumb.url, alt: 'Image'), listing.image.url, target: '_blank') if listing.image? %>
        <%= listing.title%></p>
         <p>Address:
        <%= listing.address%></p>
        <p>Price per Night: RM
        <%= listing.price%></p>
         <p>Hosted by:
          <%= listing.user.name%></p>

        <%= link_to 'Show', listing %></p>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @listings %>

<%= link_to 'New Listing', new_listing_path %>
