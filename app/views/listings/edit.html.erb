<h1>Edit Listing</h1>

 <%= form_with(model: @listing, local: true) do |form| %>

 
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@listing.errors.count, "error") %> prohibited
        this listing from being saved:
      </h2>
      <ul>
        <% @listing.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>

    <%= form.label :address %>
    <%= form.text_area :address %>

    <%= form.label :feature %>
    <%= form.text_area :feature %>

      <%= form.label :price %>
    <%= form.text_area :price %>

    <%= form.label :number_of_room %>
    <%= form.text_area :num_room %>

    <%= form.label :number_of_bed %>
    <%= form.text_area :num_bed %>

    <%= form.label :number_of_bathroom %>
    <%= form.text_area :num_bath %>

    <%= form.label :number_of_people %>
    <%= form.text_area :num_people %>

    <%= form.label :image %>
    <%= form.file_field :image %>

   <%= form.text_field :remote_image_url %>
<small>Enter URL to an image</small>
 <%= form.label :attachments %>
    <%= form.file_field :attachments, multiple: true %>
  <% if @listing.image? %>
<%= image_tag(@listing.image.url, alt: 'Image') if @listing.image? %>

      <%= label_tag :remove_image do %>
        Remove image
        <%= form.check_box :remove_image %>

      <% end %>
<% end %>
      <%= form.submit %>
  </p>
 
<% end %>
 

<%= link_to 'Show', @listing %> |
<%= link_to 'Back', listings_path %>
